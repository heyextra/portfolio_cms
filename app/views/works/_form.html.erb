<%= form_with model: work do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %><br>
    <% work.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% work.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :link %><br>
    <%= form.text_field :link %>
  </div>

    <div>
    <%= form.label :tags %><br>
    <%= form.text_field :tags %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>