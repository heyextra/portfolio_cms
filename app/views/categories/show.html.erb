<h1><%= @category.name %></h1>

<ul>
  <li><%= link_to "Edit", edit_category_path(@category) %></li>
  <li><%= link_to "Destroy", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

 <% @category.items.each do |item| %>
    <li>
      <%= item.title %>
    </li>
    <p>
        <%= item.description %>
    </p>

  <% end %>
